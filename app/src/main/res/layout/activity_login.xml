<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vistas.Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="434dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/loginsinfondo" />

    <ImageView
        android:id="@+id/btnacceder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinerfaccion"
        app:layout_constraintVertical_bias="0.433"
        app:srcCompat="@drawable/botong" />

    <ImageView
        android:id="@+id/btnregistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnacceder"
        app:layout_constraintStart_toEndOf="@+id/btnacceder"
        app:layout_constraintTop_toTopOf="@+id/btnacceder"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/botonb" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="@font/pokemonsolid"
        android:text="Acceder"
        android:textColor="#EFE4E4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnacceder"
        app:layout_constraintEnd_toEndOf="@+id/btnacceder"
        app:layout_constraintStart_toStartOf="@+id/btnacceder"
        app:layout_constraintTop_toTopOf="@+id/btnacceder" />

    <EditText
        android:id="@+id/txtpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/pokemonsolid"
        android:hint="ContraseÃ±a"
        android:inputType="textPersonName|textPassword"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtusuario"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtusuario"
        app:layout_constraintTop_toBottomOf="@+id/txtusuario" />

    <EditText
        android:id="@+id/txtusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/pokemonsolid"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="@font/pokemonsolid"
        android:text="Registrarse"
        android:textColor="#EFE4E4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnregistrarse"
        app:layout_constraintEnd_toEndOf="@+id/btnregistrarse"
        app:layout_constraintStart_toStartOf="@+id/btnregistrarse"
        app:layout_constraintTop_toTopOf="@+id/btnregistrarse" />

    <Spinner
        android:id="@+id/spinerfaccion"
        android:layout_width="302dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:entries="@array/spinnerteams"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpass" />

</androidx.constraintlayout.widget.ConstraintLayout>