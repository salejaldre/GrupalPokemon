<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="370dp">

    <ImageView
        android:id="@+id/imgsel"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tipo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pokemonsolid"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tipo2"
        app:layout_constraintEnd_toStartOf="@+id/tipo2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgsel"
        app:layout_constraintTop_toTopOf="@+id/tipo2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tipo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pokemonsolid"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/imgsel"
        app:layout_constraintTop_toBottomOf="@+id/imgsel" />

    <Spinner
        android:id="@+id/mov1"
        android:layout_width="165dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/mov2"
        app:layout_constraintEnd_toEndOf="@+id/tipo1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mov2"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/mov4"
        android:layout_width="165dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/mov2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mov2"
        app:layout_constraintTop_toBottomOf="@+id/mov2" />

    <Spinner
        android:id="@+id/mov2"
        android:layout_width="165dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tipo2"
        app:layout_constraintTop_toBottomOf="@+id/tipo2" />

    <Spinner
        android:id="@+id/mov3"
        android:layout_width="165dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/mov4"
        app:layout_constraintEnd_toEndOf="@+id/mov1"
        app:layout_constraintStart_toStartOf="@+id/mov1"
        app:layout_constraintTop_toTopOf="@+id/mov4" />
</androidx.constraintlayout.widget.ConstraintLayout>