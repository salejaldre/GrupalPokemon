        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="32dp" />

