<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="356dp"
        android:layout_height="371dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dialog" />

    <EditText
        android:id="@+id/camponombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:fontFamily="@font/pokemonsolid"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnaturalezas"
        android:layout_width="249dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:entries="@array/spinnernaturaleza"
        app:layout_constraintEnd_toEndOf="@+id/camponombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/camponombre"
        app:layout_constraintTop_toBottomOf="@+id/camponombre" />

    <Spinner
        android:id="@+id/spinhabilidad"
        android:layout_width="249dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:entries="@array/spinnernaturaleza"
        app:layout_constraintEnd_toEndOf="@+id/camponombre"
        app:layout_constraintStart_toStartOf="@+id/camponombre"
        app:layout_constraintTop_toBottomOf="@+id/spinnaturalezas" />

    <ImageView
        android:id="@+id/btacepa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/spinhabilidad"
        app:srcCompat="@drawable/botong" />

    <ImageView
        android:id="@+id/btatrasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btacepa"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/btacepa"
        app:srcCompat="@drawable/botony" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pokemonsolid"
        android:text="AÃ±adir"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btacepa"
        app:layout_constraintEnd_toEndOf="@+id/btacepa"
        app:layout_constraintStart_toStartOf="@+id/btacepa"
        app:layout_constraintTop_toTopOf="@+id/btacepa" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pokemonsolid"
        android:text="Atras"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btatrasa"
        app:layout_constraintEnd_toEndOf="@+id/btatrasa"
        app:layout_constraintStart_toStartOf="@+id/btatrasa"
        app:layout_constraintTop_toTopOf="@+id/btatrasa" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/pokemonsolid"
        android:text="Elige Un Nuevo Pokemon"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/camponombre"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageView8" />

</androidx.constraintlayout.widget.ConstraintLayout>