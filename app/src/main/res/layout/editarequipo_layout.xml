<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="356dp"
        android:layout_height="371dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dialog" />

    <EditText
        android:id="@+id/camponombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:fontFamily="@font/pokemonsolid"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnaturalezas"
        android:layout_width="249dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:entries="@array/spinnernaturaleza"
        app:layout_constraintEnd_toEndOf="@+id/camponombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/camponombre"
        app:layout_constraintTop_toBottomOf="@+id/camponombre" />

    <Spinner
        android:id="@+id/spinhabilidad"
        android:layout_width="249dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:entries="@array/spinnernaturaleza"
        app:layout_constraintEnd_toEndOf="@+id/camponombre"
        app:layout_constraintStart_toStartOf="@+id/camponombre"
        app:layout_constraintTop_toBottomOf="@+id/spinnaturalezas" />

</androidx.constraintlayout.widget.ConstraintLayout>